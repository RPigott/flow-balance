#!/bin/sh

# Upgrade and install software
sudo yum -y update
sudo yum -y upgrade
sudo yum install -y \
    wget \
    gcc \
    gcc-c++ \
    python27-devel \
    python27-virtualenv \
    python27-pip \
    findutils \
    zlib-devel \
    zip \
    git

# Allow git
git config --global credential.helper '!aws codecommit credential-helper $@'
git config --global credential.UseHttpPath true
